<%= form_for :message, url: messages_path do |f| %>

  <% if @message.errors.any? %>
    <% @message.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  <% end %>

  <%= f.label :text %><br>
  <%= f.text_area :text %>
  <%= f.submit %>

<% end %>

<%= link_to 'back', messages_path %>
