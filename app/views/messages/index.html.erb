<% if current_user %>
  <%= render 'form' %>
<% end %>

<% @messages.reverse.each do |message| %>

    <div class='message-elements'>
      <p><%= message.user.email %>: </p>
        <p class='message-text'><%= message.text %></p>
        <p><%= message.time.strftime('%A at %H:%M') %> |
        <%= link_to "comments(#{message.comments.count})", message_path(message.id) %> |
      <% if current_user == message.user %>
        <%= link_to 'edit', edit_message_path(message) %> |
        <%= link_to 'delete', message_path(message), method: :delete%></p>
      <% end %>
    </div></br>

<% end %>
